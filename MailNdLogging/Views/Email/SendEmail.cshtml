@model MailNdLogging.Models.SendEmail
@{
    ViewBag.Title = "SendEmail";
}

<div class="page-contentbar">

    <!-- START PAGE CONTENT -->
    <div id="page-right-content">

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="header-title m-t-0 m-b-20">Contact</h4>
                </div>
            </div> <!-- end row -->
            <div class="row">
                <div class="col-sm-12">

                    <div class="row">
                        <div class="col-md-6">
                            <form class="form-horizontal" role="form" method="post" id="sendEmail">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Name</label>
                                    <div class="col-md-10">
                                        <input type="text" id="Name" name="Name" class="form-control" autofocus="autofocus">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Email</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" placeholder="Email..." id="Email" name="Email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="example-email"> Subject</label>
                                    <div class="col-md-10">
                                        <input type="text" id="Subject" name="Subject" class="form-control" placeholder="Subject...">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Message</label>
                                    <div class="col-md-10">
                                        <textarea rows="4" cols="50" type="text" class="form-control" placeholder="Type your Message here" id="Message" name="Message"></textarea>
                                    </div>
                                </div>
                               
                                @*<text type="text" class="form-control" placeholder="Type your Message here" id="Message" name="Message">*@

                                @*<div class="col-md-2 control-label">

            <div id="multiple">
                <input type="file" class="multiple" name="files" multiple />
            </div>



        </div>*@

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- end row -->
                </div> <!-- end col -->
            </div>
        </div>
        <!-- end container -->


    </div>




</div>

